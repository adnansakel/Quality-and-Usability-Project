<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaA5D6A7">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight=".2"
        android:gravity="center">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#ff7373"
                    android:text="RULES OF THE GAME"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#aa00BFA5"
                    android:layout_marginBottom="7dp"
                    >

                    <ImageView
                        android:id="@+id/chat_field"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/bingo_field" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/chat_field"
                        android:layout_centerVertical="true"
                        android:text="Here you can see a filled grid of numbers, i which you need to find possible Bingo pattern."
                        android:textColor="#ffffff"
                        android:textAlignment="center"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#aa00BFA5"
                    android:layout_marginBottom="7dp"
                    >

                    <ImageView
                        android:id="@+id/callednumber_field"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/number_called" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/callednumber_field"
                        android:layout_centerVertical="true"
                        android:text="The called number appears here. You will have only 5 sec for eah number to find, which is indicated by the little time bar below."
                        android:textColor="#ffffff"
                        android:textAlignment="center"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="#aa00BFA5"
                    android:orientation="vertical"
                    android:layout_marginBottom="7dp">


                    <ImageView
                        android:id="@+id/bingo_pattern"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="7dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bingo_pattern"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="65dp"
                        android:gravity="center"
                        android:layout_marginTop="125dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="For a bingo, You need to mark called numbers to find above patterns"
                        android:textColor="#ffffff"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:id="@+id/textView" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#aa00BFA5"
                    android:layout_marginBottom="5dp"
                    >

                    <ImageView
                        android:id="@+id/saybingo_field"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="7dp"
                        android:src="@mipmap/bingo_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/saybingo_field"
                        android:layout_centerVertical="true"
                        android:text="Say bingo by clicking this button to win the game when you find a bingo"
                        android:textColor="#ffffff"
                        android:textAlignment="center"
                        android:textSize="20sp" />
                </RelativeLayout>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".95"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/txtNext"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="NEXT"
            android:textColor="#00BFA5"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="25sp"/>
        <View
            android:layout_width="65dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="#00BFA5"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaA5D6A7">
<LinearLayout
    android:layout_width="500dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight=".5"
        android:gravity="center">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="350dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#ff7373"
                    android:text="RULES OF THE GAME"/>

                <RelativeLayout
                    android:layout_width="1050dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rect_backgroud_orange"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:paddingBottom="0dp">

                    <ImageView
                        android:id="@+id/chat_field"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/bingo_field" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="20dp"
                        android:text="Here you can see a filled grid of numbers, i which you need to find possible Bingo pattern."
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="25dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1050dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rect_backgroud_orange"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:paddingBottom="0dp">

                    <ImageView
                        android:id="@+id/number_called"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/number_called" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="110dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginRight="20dp"
                        android:text="In the pool ball left to the grid stands the called number you have to search in your grid and mark it by tapping on them. But you have only 10sec for eah number to find, which is indicated by the little time bar below."
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="25dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1050dp"
                    android:layout_height="170dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rect_backgroud_orange"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:paddingBottom="0dp">


                    <ImageView
                        android:id="@+id/bingo_pattern"
                        android:layout_width="800dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bingo_pattern"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="To win the game the marked numbers in the grid need to fulfil the pattern you see here."
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:id="@+id/textView" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1050dp"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rect_backgroud_orange"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:paddingBottom="0dp">

                    <ImageView
                        android:id="@+id/bingo_button"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerCrop"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/bingo_button" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="20dp"
                        android:text="If one of the patterns is fulfilled you can press the green Bingo button. And if you are the first one, then you win the game."
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="25dp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/txtNext"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="420dp"
                    android:gravity="center"
                    android:text="NEXT"
                    android:background="@drawable/rect_background_green"
                    android:textColor="#f8e8db"
                    android:textStyle="bold"
                    android:textSize="25sp"/>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

        <View
            android:layout_width="70dp"
            android:layout_height="2dp"
            android:background="#00BFA5"/>

</LinearLayout>